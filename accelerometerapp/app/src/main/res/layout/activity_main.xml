<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ứng dụng Đo Gia Tốc"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvAccelerometerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:text="Thông tin cảm biến gia tốc:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvXAxis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAccelerometerInfo"
        android:text="Trục X: 0.0 m/s²"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvYAxis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvXAxis"
        android:text="Trục Y: 0.0 m/s²"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvZAxis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvYAxis"
        android:text="Trục Z: 0.0 m/s²"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvTotalAcceleration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvZAxis"
        android:text="Gia tốc tổng: 0.0 m/s²"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <FrameLayout
        android:id="@+id/ballContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvTotalAcceleration"
        android:background="@drawable/container_background">

        <ImageView
            android:id="@+id/ivBall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ball"
            android:layout_gravity="center" />

    </FrameLayout>

</RelativeLayout>
