<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Vòng tròn ngoài -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#EFEFEF" />
            <stroke android:width="2dp" android:color="#444444" />
        </shape>
    </item>

    <!-- Vạch chia -->
    <item>
        <rotate android:fromDegrees="0">
            <shape android:shape="line">
                <stroke android:width="2dp" android:color="#000000" />
                <size android:height="300dp" android:width="2dp" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate android:fromDegrees="90">
            <shape android:shape="line">
                <stroke android:width="2dp" android:color="#000000" />
                <size android:height="300dp" android:width="2dp" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate android:fromDegrees="45">
            <shape android:shape="line">
                <stroke android:width="1dp" android:color="#666666" />
                <size android:height="300dp" android:width="1dp" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate android:fromDegrees="135">
            <shape android:shape="line">
                <stroke android:width="1dp" android:color="#666666" />
                <size android:height="300dp" android:width="1dp" />
            </shape>
        </rotate>
    </item>
</layer-list>
